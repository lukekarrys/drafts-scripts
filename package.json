{
  "name": "@lukekarrys/drafts-scripts",
  "description": "My Drafts scripts",
  "version": "1.0.0",
  "dependencies": {
    "outdent": "^0.5.0"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.1.2",
    "lodash": "^4.17.19",
    "mockdate": "^2.0.2",
    "prettier": "^1.13.3",
    "rollup": "^0.59.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "sinon": "^6.0.0",
    "tape": "^4.9.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6
    },
    "overrides": [
      {
        "files": [
          "src/*.js",
          "lib/*.js"
        ],
        "parserOptions": {
          "sourceType": "module"
        },
        "globals": {
          "console": false,
          "Credential": false,
          "HTTP": false,
          "app": false,
          "draft": false,
          "context": false,
          "Prompt": false,
          "CallbackURL": false
        },
        "rules": {
          "no-console": 0
        }
      },
      {
        "files": [
          "rollup.config.js"
        ],
        "env": {
          "node": true
        },
        "parserOptions": {
          "sourceType": "module"
        }
      },
      {
        "files": [
          "test/**/*.js"
        ],
        "env": {
          "node": true
        },
        "rules": {
          "no-console": 2
        }
      }
    ]
  },
  "eslintIgnore": [
    "dist/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run validate && lint-staged"
    }
  },
  "keywords": [],
  "license": "ISC",
  "lint-staged": {
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "main": "index.js",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always"
  },
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "copy": "cp -r dist/* ~/Library/Mobile\\ Documents/com\\~apple\\~CloudDocs/DraftsScripts",
    "eslint": "eslint --fix .",
    "export": "npm run build && npm run copy",
    "lint": "npm run prettier && npm run eslint",
    "prettier": "prettier --write '**/*.{js,md,css,json}'",
    "test": "tape test/*.js",
    "watch": "nodemon --exec 'npm run build && npm test && npm run copy' --ignore dist",
    "validate": "npm ls"
  }
}
